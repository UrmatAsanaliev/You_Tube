<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_play_list"
        android:src="@drawable/image3"
        android:layout_margin="@dimen/sixteen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/one_hundred_twenty"
        android:layout_height="@dimen/eighty"/>

    <View
        android:id="@+id/view"
        android:background="#99000000"
        app:layout_constraintEnd_toEndOf="@id/img_play_list"
        app:layout_constraintBottom_toBottomOf="@id/img_play_list"
        app:layout_constraintStart_toStartOf="@id/img_play_list"
        android:layout_width="@dimen/one_hundred_twenty"
        android:layout_height="@dimen/twenty_four"/>

    <TextView
        android:layout_marginEnd="@dimen/twenty_six"
        android:textSize="@dimen/twelve_sp"
        android:textColor="@color/white"
        tools:text="playlist"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_play_list_name"
        android:layout_marginEnd="@dimen/sixteen"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/eight"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_play_list"
        app:layout_constraintStart_toEndOf="@id/img_play_list"
        tools:text="Emotional Well-being Healing Practices for Children"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_play_list_data"
        android:layout_marginTop="@dimen/four"
        android:textSize="@dimen/twelve_sp"
        tools:text="32 video series"
        app:layout_constraintEnd_toEndOf="@id/txt_play_list_name"
        app:layout_constraintTop_toBottomOf="@id/txt_play_list_name"
        app:layout_constraintStart_toStartOf="@id/txt_play_list_name"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>